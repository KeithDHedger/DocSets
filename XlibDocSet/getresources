if [[ ! -e ./tagreader ]];then
	g++ tagreader.cpp $(pkg-config --cflags --libs Qt5Core) -fPIC -o tagreader
fi

if [[ ! -e html ]];then
	mkdir html
	pushd html
		wget --recursive --no-host-directories --no-parent -k -p -E --cut-dirs=2 https://tronche.com/gui/x/xlib/
	popd
fi
